@model My.Plygrnd.Library.Models.BusinessOutlet

@{
    ViewBag.Title = "Outlet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #map {
        height: 400px;
        width: 100%;
    }
</style>

<div class="jumbotron"></div>

<div class="row">
    <div class="col-md-4" align="center">
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <p>@Html.DisplayNameFor(model => model.BranchId): @Html.DisplayFor(model => model.BranchId)</p>
        <p>@Html.DisplayNameFor(model => model.Address): @Html.DisplayFor(model => model.Address)</p>
    </div>
</div>

<div id="map"></div>
<script>
    var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: 2.962243, lng: 101.758058 },
            zoom: 8
        });
    }
</script>

@section Scripts {
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDpE14hmpY9hqR0qQFjXFCVZ028BCmWTqk&callback=initMap"></script>
}